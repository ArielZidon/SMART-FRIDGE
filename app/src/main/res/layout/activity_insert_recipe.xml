<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context=".recipesDB.insert_recipe">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:fontFamily="cursive"
        android:text="Enter YUOR Recipe"
        android:textColor="@color/white"
        android:textSize="35dp" />

    <EditText
        android:id = "@+id/recipe_name"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below="@+id/title"
        android:focusable = "true"
        android:textColorHighlight = "#000000"
        android:textColorHint = "@color/white"
        android:layout_marginTop = "50dp"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textColor="@color/white"
        android:hint = " Recipe Name"/>

    <EditText
        android:id = "@+id/recipe_time"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below="@+id/recipe_name"
        android:focusable = "true"
        android:textColorHighlight = "#000000"
        android:textColorHint = "@color/white"
        android:layout_marginTop = "20dp"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textColor="@color/white"
        android:hint = " Recipe Time"/>

    <EditText
        android:id = "@+id/recipe_instructions"
        android:layout_width = "wrap_content"
        android:layout_height = "wrap_content"
        android:layout_below="@+id/recipe_time"
        android:focusable = "true"
        android:textColorHighlight = "#000000"
        android:textColorHint = "@color/white"
        android:layout_marginTop = "20dp"
        android:layout_alignParentStart = "true"
        android:layout_alignParentEnd = "true"
        android:textColor="@color/white"
        android:hint = " Instructions"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/recipe_instructions"
        android:layout_margin="40dp"
        android:layout_centerInParent="true"
        android:text="upload_image"
        android:id="@+id/upload_image_bt">

    </Button>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upload_image_bt"
        android:id="@+id/img_gallery"
        android:scaleType="fitXY">

    </ImageView>




    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_gallery"
        android:text=" Ingredients :"
        android:textColor="@color/white"
        android:textColorHint = "@color/white"
        android:textSize="20sp"
        android:id="@+id/ingredients">

    </TextView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:scrollbars="none"
        android:layout_below="@+id/ingredients"
        android:id="@+id/scrollView">

        <LinearLayout
            android:id="@+id/layout_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/ingredients"
            android:layout_margin="10dp"
            ></LinearLayout>

    </ScrollView>


    <Button
        android:id="@+id/button_add"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_below="@+id/scrollView"
        android:layout_marginLeft="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:text="Add"
        android:textAllCaps="false"
        android:textColor="@color/white"></Button>

    <Button
        android:id="@+id/button_submit_list"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@+id/button_add"
        android:layout_margin="10dp"
        ></Button>

</RelativeLayout>